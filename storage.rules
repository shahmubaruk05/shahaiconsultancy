rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Invoice payment slip upload
    // Path: invoicePaymentSlips/{invoiceId}/{fileName}
    match /invoicePaymentSlips/{invoiceId}/{fileName} {
      // Client jokhon slip upload korbe (login thakuk ar na thakuk)
      allow write: if request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
      // Slip sudhu admin panel theke dekhte parben
      allow read: if isAdmin();
    }

    // Blog cover images (jodi use koren)
    match /blogImages/{fileName} {
      allow read: if true;       // Public blog image view
      allow write: if isAdmin(); // Only admin upload
    }

    // Fallback â€“ everything else admin only
    match /{allPaths=**} {
      allow read, write: if isAdmin();
    }
  }
}
