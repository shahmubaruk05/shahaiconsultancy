rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to check for authentication and ownership.
    function signedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return signedIn() && request.auth.uid == userId;
    }

    // Allow public users to create a bKash payment record with specific data validation.
    // Allow authenticated users (admins) to read and update these records.
    match /bkashPayments/{paymentId} {
      allow create: if request.resource.data.plan in ["pro", "premium"]
                      && request.resource.data.amount is string
                      && request.resource.data.txId is string
                      && request.resource.data.status == "pending";

      allow read, update: if request.auth != null && request.auth.token.role == "admin";
    }

    // === Optional: if I ever store payments under users/{uid}/bkashPayments ===
    match /users/{uid}/bkashPayments/{paymentId} {
      allow create: if
        request.resource.data.plan in ["pro", "premium"]
        && request.resource.data.amountBdt is int
        && request.resource.data.txId is string
        && request.resource.data.status == "pending";

      // Allow the logged-in user (or admin) to see / update their own payments
      allow read, update: if request.auth != null && request.auth.uid == uid;
    }

    match /paypalPayments/{docId} {
      allow create: if request.auth != null;
      allow read: if false; 
    }

    // Secure all user-specific data under the /users/{userId} path.
    // This includes the user's profile document and all sub-collections.
    match /users/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }
    
    // Allow a user to read and create their own top-level user document.
    match /users/{userId} {
       allow get, create: if isOwner(userId);
       // Disallow listing all users.
       allow list: if false;
       // Do not allow client-side plan updates
       allow update: if isOwner(userId) 
                && !("plan" in request.resource.data)
                && !("planSource" in request.resource.data)
                && !("planUpdatedAt" in request.resource.data);
       allow delete: if isOwner(userId);
    }
  }
}
