
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to check for authentication and ownership.
    function signedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return signedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // === Manual bKash payments (top-level collection) ===
    match /bkashPayments/{txId} {
      // clients can create when submitting manual bKash payment info
      allow create: if true;
      // only admin can read/update/delete
      allow read, update, delete: if isAdmin();
    }

    match /paypalPayments/{txId} {
      // created by backend or client when logging PayPal payments
      allow create: if request.auth != null || isAdmin();
      // only admin can read/update/delete
      allow read, update, delete: if isAdmin();
    }
    
    // PAYMENTS: Log for subscriptions and invoice payments
    match /payments/{paymentId} {
      // Permissive rule for development.
      allow read, write: if true;
    }

     match /aiUsageLogs/{logId} {
      allow create: if true;
      allow read: if isAdmin();
    }

    match /emailCampaigns/{campaignId} {
      allow read, write: if isAdmin();
    }

    match /affiliates/{affiliateId} {
      allow read, write: if isAdmin();
    }

    match /affiliateClicks/{clickId} {
      // tracking clicks can be public create, admin read
      allow create: if true;
      allow read: if isAdmin();
    }
    
    match /blogPosts/{postId} {
      // Public can read all published posts
      allow read: if true;

      // Only admin can create/update/delete blog posts
      allow create, update, delete: if isAdmin();
    }

    match /intakes/{intakeId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    match /invoices/{invoiceId} {
      // public can read, admin can write
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /invoicePayments/{paymentId} {
        allow create: if true;
        allow read, update, delete: if isAdmin();
    }
    
    // === Orders System ===
    match /orders/{orderId} {
      // Admins have full access.
      allow read, write: if isAdmin();

      // Subcollections: updates, files, statusTimeline
      match /updates/{updateId} {
        allow read, write: if isAdmin();
      }

      match /files/{fileId} {
        allow read, write: if isAdmin();
      }

      match /statusTimeline/{eventId} {
        allow read, write: if isAdmin();
      }
    }

    // Secure all user-specific data under the /users/{userId} path.
    match /users/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }
    
    match /users/{uid} {
      // User can read/update their own doc
      allow read, update: if request.auth != null && request.auth.uid == uid;

      // Admin can read/update any user
      allow read, update: if isAdmin();

      // Create allowed when the user is creating their own doc
      allow create: if request.auth != null && request.auth.uid == uid;
    }
  }
}
