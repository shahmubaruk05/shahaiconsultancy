rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to check for authentication and ownership.
    function signedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return signedIn() && request.auth.uid == userId;
    }

    // Secure all user-specific data under the /users/{userId} path.
    // This includes the user's profile document and all sub-collections.
    match /users/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }
    
    // Allow a user to read and create their own top-level user document.
    match /users/{userId} {
       allow get, create: if isOwner(userId);
       // Disallow listing all users.
       allow list: if false;
       // Updates and deletes are covered by the wildcard rule above, but can be specified here if needed.
       allow update, delete: if isOwner(userId);
    }
  }
}
