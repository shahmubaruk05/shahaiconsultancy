rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to check for authentication and ownership.
    function signedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return signedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return request.auth != null
        && request.auth.token.email in [
          "shahmubaruk05@gmail.com",
          "shahmubaruk.ai@gmail.com"
        ];
    }

    // === Manual bKash payments (top-level collection) ===
    match /bkashPayments/{paymentId} {
        // Anyone can submit a payment record (guest checkout is allowed)
        allow create: if
            request.resource.data.plan in ["pro", "premium"]
            && request.resource.data.amount is string
            && request.resource.data.txId is string
            && request.resource.data.status == "pending";
        // Admin / dashboard access
        allow read, update: if isAdmin();
    }

    // === Optional: if I ever store payments under users/{uid}/bkashPayments ===
    match /users/{uid}/bkashPayments/{paymentId} {
        allow create: if
            request.resource.data.plan in ["pro", "premium"]
            && request.resource.data.amount is int
            && request.resource.data.txId is string
            && request.resource.data.status == "pending";

        // Allow the logged-in user (or admin) to see / update their own payments
        allow read, update: if request.auth != null && request.auth.uid == uid;
    }

    match /paypalPayments/{docId} {
      allow create: if request.auth != null;
      allow read: if false; 
    }
    
     match /aiUsageLogs/{logId} {
      // Any user (even guest through client SDK) can create a log
      allow create: if true;

      // Only admin can read analytics
      allow read: if isAdmin();
    }

    // Secure all user-specific data under the /users/{userId} path.
    // This includes the user's profile document and all sub-collections.
    match /users/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }
    
    match /users/{uid} {
      // Read + update allowed for:
      // - the logged-in user themselves
      // - OR an admin
      allow read, update: if request.auth != null
        && (request.auth.uid == uid || isAdmin());

      // Create allowed when the user is creating their own doc
      allow create: if request.auth != null && request.auth.uid == uid;
    }
  }
}
