
{
  "entities": {
    "AcademyProgress": {
      "title": "AcademyProgress",
      "type": "object",
      "description": "Tracks a user's progress within a specific academy module.",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user this progress belongs to."
        },
        "moduleId": {
          "type": "string",
          "description": "The slug of the academy module (e.g., 'startup-foundation')."
        },
        "completedLessonIds": {
          "type": "array",
          "description": "A list of lesson IDs that the user has completed within this module.",
          "items": {
            "type": "string"
          }
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the progress was last updated."
        }
      },
      "required": ["userId", "moduleId", "completedLessonIds", "updatedAt"]
    },
